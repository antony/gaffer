<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>

	<files>
		<file>
			<source>${project.build.directory}/${project.basedir}/${project.artifactId}-${project.version}.jar</source>
			<outputDirectory>lib</outputDirectory>
			<destName>gaffer.jar</destName>
		</file>
		<file>
			<source>${project.basedir}/bin/gaffer_darwin_386</source>
			<outputDirectory>bin</outputDirectory>
			<destName>gaffer_darwin_386</destName>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>${project.basedir}/bin/gaffer_darwin_amd64</source>
			<outputDirectory>bin</outputDirectory>
			<destName>gaffer_darwin_amd64</destName>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>${project.basedir}/bin/gaffer_linux_386</source>
			<outputDirectory>bin</outputDirectory>
			<destName>gaffer_linux_386</destName>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>${project.basedir}/bin/gaffer_linux_amd64</source>
			<outputDirectory>bin</outputDirectory>
			<destName>gaffer_linux_amd64</destName>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>${project.basedir}/bin/gaffer_windows_386.exe</source>
			<outputDirectory>bin</outputDirectory>
			<destName>gaffer_windows_386.exe</destName>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>${project.basedir}/bin/gaffer_windows_amd64.exe</source>
			<outputDirectory>bin</outputDirectory>
			<destName>gaffer_windows_amd64.exe</destName>
			<fileMode>0755</fileMode>
		</file>
	</files>
</assembly>
